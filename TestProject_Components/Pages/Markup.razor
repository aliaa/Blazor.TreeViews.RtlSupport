    <Item Label="Item 1">
        <Item Label="Item 1.1" ContentIsCollapsable="true">
            Some detail.
        </Item>
        <Item Label="Item 1.2">
        </Item>
        <Item Label="Item 1.3">
        </Item>
        <Item Label="Item 1.4">
        </Item>
    </Item>
    <Item Label="Item 2">
        <Item Label="Item 2.1">
            <Item Label="Item 2.1.1">
            </Item>
            <Item Label="Item 2.1.2">
            </Item>
            <Item Label="Item 2.1.3">
            </Item>
        </Item>
    </Item>
</MarkupTreeView>

